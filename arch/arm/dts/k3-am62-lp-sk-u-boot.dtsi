#include "k3-am62-lp-sk-binman.dtsi"

/ {
	panel_lvds: panel-lvds {
		bootph-pre-ram;
		compatible = "simple-panel";
		status= "okay";
		width-mm = <217>;
		height-mm = <136>;
		data-mapping = "vesa-24";
		panel-timing {
			bootph-pre-ram;
			clock-frequency = <150274>;
			hactive = <1920>;
			vactive = <1200>;
			hback-porch = <32>;
			hfront-porch = <52>;
			vback-porch = <24>;
			vfront-porch = <8>;
			hsync-len = <24>;
			vsync-len = <3>;
			de-active = <1>;
		};
	};

	display {
		bootph-all;
		status="okay";
		compatible = "microtips,mf-101hiebcaf0", "panel-simple";
		/*
		* Note that the OLDI TX 0 transmits the odd set of pixels
		* while the OLDI TX 1 transmits the even set. This is a
		* fixed configuration in the IP integration and is not
		* changeable. The properties, "dual-lvds-odd-pixels" and
		* "dual-lvds-even-pixels" have been used to merely
		* identify if a Dual Link configuration is required.
		* Swapping them will cause an error in the dss oldi driver.
		*/
		ports {
			bootph-all;
			status="okay";
			#address-cells = <1>;
			#size-cells = <0>;

			port@0 {
				bootph-all;
				status="okay";
				reg = <0>;
				dual-lvds-odd-pixels;
				lcd_in0: endpoint {
				bootph-all;
				status="okay";
					remote-endpoint = <&oldi_0_out>;
				};
			};
			port@1 {
				bootph-all;
				status="okay";
				reg = <1>;
				dual-lvds-even-pixels;
				lcd_in1: endpoint {
					bootph-all;
					status="okay";
					remote-endpoint = <&oldi_1_out>;
				};
			};
		};
	};
};

&dss {
	bootph-all;
	status = "okay";
	ti,am65x-oldi-io-ctrl = <&dss_oldi_io_ctrl>;

	clocks = <&k3_clks 186 6>,
	 <&dss_vp1_clk>,
	 <&k3_clks 186 2>;
};

&oldi0 {
	bootph-all;
	status = "okay";
	ti,companion-oldi = <&oldi1>;
};

&oldi1 {
	bootph-all;
	status = "okay";
	ti,secondary-oldi;
	ti,companion-oldi = <&oldi0>;
};

&oldi0_port0 {
	bootph-all;
	oldi_0_in: endpoint {
		bootph-all;
		remote-endpoint = <&dpi0_out0>;
	};
};

&oldi0_port1 {
	bootph-all;
	oldi_0_out: endpoint {
		bootph-all;
		remote-endpoint = <&lcd_in0>;
	};
};

&oldi1_port0 {
	bootph-all;
	oldi_1_in: endpoint {
		bootph-all;
		remote-endpoint = <&dpi0_out1>;
	};
};

&oldi1_port1 {
	bootph-all;
	oldi_1_out: endpoint {
		bootph-all;
		remote-endpoint = <&lcd_in1>;
	};
};

&dss_ports {
	bootph-all;
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;

	/* VP1: Output to OLDI */
	port@0 {
		bootph-all;
		status = "okay";
		reg = <0>;
		#address-cells = <1>;
		#size-cells = <0>;

		dpi0_out0: endpoint@0 {
			bootph-all;
			status = "okay";
			reg = <0>;
			remote-endpoint = <&oldi_0_in>;
		};
		dpi0_out1: endpoint@1 {
			bootph-all;
			status = "okay";
			reg = <1>;
			remote-endpoint = <&oldi_1_in>;
		};
	};
};

&ospi0 {
	flash@0 {
		spi-max-frequency = <25000000>;
	};
};
